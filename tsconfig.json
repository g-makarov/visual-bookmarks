{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@root/*": ["./*"]
    },
    "types": ["node", "chrome"]
  },
  "include": ["src/**/*"]
}
